<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <Button
        android:id="@+id/botonAtrasFeedback"
        android:layout_width="114dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="59dp"
        android:background="@color/colorPrimary"
        android:enabled="true"
        android:text="ATRÁS"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/botonNo3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonNo2"
        app:srcCompat="@drawable/no" />

    <ImageButton
        android:id="@+id/botonNo2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonNo1"
        app:srcCompat="@drawable/no" />

    <ImageButton
        android:id="@+id/botonSi3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/pregunta3"
        app:layout_constraintTop_toBottomOf="@+id/botonSi2"
        app:srcCompat="@drawable/yes" />

    <ImageButton
        android:id="@+id/botonSi2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="36dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/pregunta2"
        app:layout_constraintTop_toBottomOf="@+id/botonSi1"
        app:srcCompat="@drawable/yes" />

    <TextView
        android:id="@+id/pregunta3"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="¿Te ha gustado?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta2" />

    <TextView
        android:id="@+id/textoFeedback"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="12dp"
        android:text="Feedback"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoNombreActividad" />

    <TextView
        android:id="@+id/textoNombreActividad"
        android:layout_width="338dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Nombre Actividad"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pregunta1"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="88dp"
        android:text="¿Te ha parecido útil?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFeedback" />

    <TextView
        android:id="@+id/pregunta2"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:text="¿Te ha parecido difícil?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText"
        tools:layout_editor_absoluteX="-16dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:hint="Introduce un comentario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta3" />

    <Button
        android:id="@+id/botonEnviarFeedback"
        android:layout_width="114dp"
        android:layout_height="70dp"
        android:layout_marginStart="71dp"
        android:layout_marginBottom="59dp"
        android:background="@color/colorPrimary"
        android:text="@string/textoEnviar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/botonSi1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="74dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/pregunta1"
        app:layout_constraintTop_toBottomOf="@+id/textoFeedback"
        app:srcCompat="@drawable/yes" />

    <ImageButton
        android:id="@+id/botonNo1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoNombreActividad"
        app:srcCompat="@drawable/no" />

</androidx.constraintlayout.widget.ConstraintLayout>