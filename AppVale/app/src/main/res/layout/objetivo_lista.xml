<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenObjetivo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/objetivo" />

    <LinearLayout
        android:id="@+id/layoutLineal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259"
        tools:layout_editor_absoluteX="16dp"></LinearLayout>

    <TextView
        android:id="@+id/nombreObjetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="@string/nombreObjetivo"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imagenObjetivo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcionObjetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/descripcionObjetivo"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imagenObjetivo"
        app:layout_constraintTop_toBottomOf="@+id/nombreObjetivo" />
</androidx.constraintlayout.widget.ConstraintLayout>